<div id="heading">
  <span>Send me a message!</span>  
</div>

<div id="contactform">
    <%= form_for @contact do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name, required: true %>
      
      <br>

      <%= f.label :email %><br>
      <%= f.text_field :email, required: true %>
      
      <br>

      <%= f.label :message %><br>
      <%= f.text_area :message, as: :text %>

      <br>
      
      <div class= "hidden">
        <%= f.label :nickname %><br>
        <%= f.text_field :nickname, hint:'Leave this blank!'%>
      </div>

     <%= f.submit 'Submit', :class=> "btn btn-primary" %> 
    <% end %>

  </div>  
